{
  "manifest_version": 3,
  "name": "EdgeSuggestAI",
  "version": "1.2",
  "description": "Cross-browser extension to show real-time search suggestions in search bars.",
  "icons": {
    "16": "icons/edge-16.svg",
    "48": "icons/edge-48.svg",
    "128": "icons/edge-128.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.bing.com/*",
        "https://duckduckgo.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://suggestqueries.google.com/*"
  ]
}