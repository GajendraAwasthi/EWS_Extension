{
  "manifest_version": 3,
  "name": "EdgeSuggestAI",
  "version": "1.1",
  "description": "Suggests search queries from the internet as you type.",
  "icons": {
    "16": "icons/edge-16.svg",
    "48": "icons/edge-48.svg",
    "128": "icons/edge-128.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.bing.com/*",
        "https://duckduckgo.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "host_permissions": [
    "https://suggestqueries.google.com/*",
    "https://api.bing.com/*",
    "https://duckduckgo.com/*"
  ]
}